<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/song_image"
        android:layout_width="@dimen/listview_image_size"
        android:layout_height="@dimen/listview_image_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/song_image"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/song_image"
        android:layout_toRightOf="@id/song_image"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_16dp"
        android:paddingStart="@dimen/padding_16dp"
        tools:ignore="RelativeOverlap,RtlSymmetry">

        <TextView
            android:id="@+id/song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_20sp" />

        <TextView
            android:id="@+id/song_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingTop="@dimen/padding_8dp"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/textsize_16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/popup_menu"
        android:layout_width="@dimen/option_menu_size"
        android:layout_height="@dimen/option_menu_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/popup_menu"
        android:contentDescription="@string/option_menu" />

</RelativeLayout>
